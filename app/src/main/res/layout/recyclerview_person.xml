<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_132sdp"
    android:layout_height="@dimen/_148sdp"
    app:cardElevation="@dimen/_8sdp"
    app:cardUseCompatPadding="true"
    android:background="?attr/background_color"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_4sdp">

        <ImageView
            android:id="@+id/recyclerview_person_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:src="@drawable/profile"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/recyclerview_person_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recyclerview_person_iv"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/aldrich"
            android:gravity="center"
            android:text="@string/Username"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp" />
        <ImageButton
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:src="@android:drawable/ic_delete"
            android:backgroundTint="#2D4CAF50"
            android:id="@+id/recyclerview_person_btn_delete"
            android:visibility="gone"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>